<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtFilterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Filter Options"
        android:textAppearance="?attr/textAppearanceHeadline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/txtFilterTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtFilterTitle">
        <TextView
            android:id="@+id/txtSortTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/spinner_border"
            android:padding="4dp">

            <Spinner
                android:id="@+id/spinnerFilterOrder"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:entries="@array/sorting_filter_array"
                android:spinnerMode="dialog"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="133dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPercentageTitle">

        <TextView
            android:id="@+id/txtFilterHappinessTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Happiness:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderHappiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            app:haloColor="@color/blue"
            app:haloRadius="15dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/txtFilterSadnessTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sadness:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderSadness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:id="@+id/txtFilterFearTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fear:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderFear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/txtFilterAngerTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Anger:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderAnger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout7"
        app:layout_constraintTop_toTopOf="@+id/linearLayout7">

        <TextView
            android:id="@+id/txtFilterDisgustTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Disgust:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderDisgust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout8"
        app:layout_constraintTop_toTopOf="@+id/linearLayout8">

        <TextView
            android:id="@+id/txtFilterSurpriseTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Surprise:"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderSurprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="@color/lightGrey"
            app:thumbElevation="6dp"
            app:trackColorActive="@color/blue"
            app:trackHeight="6dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPercentageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Percentages"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPercentageTitle" />

    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="APPLY"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/btnResetFilter"
        app:layout_constraintTop_toTopOf="@+id/btnResetFilter" />

    <Button
        android:id="@+id/btnResetFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_bg"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>